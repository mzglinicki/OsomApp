<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="detailFieldTitleStyle">
        <item name="android:textSize">@dimen/bodyTextSize</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_marginStart">@dimen/mainMargin</item>
        <item name="android:layout_marginBottom">@dimen/mainMargin</item>
    </style>

    <style name="detailInputStyle">
        <item name="android:textSize">@dimen/bodyTextSize</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:layout_marginBottom">@dimen/mainMargin</item>
        <item name="android:layout_marginEnd">@dimen/mainMargin</item>
    </style>

    <style name="progressBarStyle">
        <item name="android:layout_width">@dimen/progressBarSize</item>
        <item name="android:layout_height">@dimen/progressBarSize</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="iconStyle">
        <item name="android:layout_width">@dimen/iconSize</item>
        <item name="android:layout_height">@dimen/iconSize</item>
        <item name="android:padding">@dimen/iconPadding</item>
        <item name="android:layout_margin">@dimen/smallMargin</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>